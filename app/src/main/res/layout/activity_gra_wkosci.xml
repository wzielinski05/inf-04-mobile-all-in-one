<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".GraWKosciActivity">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="#a52a2a"
        android:padding="7dp"
        android:text="Gra w kości. Autorem jest skolimek (temperatura)"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/rollBones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:backgroundTint="#D2681E"
        android:text="RZUĆ KOŚĆMI" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/k1"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/not_know" />

        <ImageView
            android:id="@+id/k2"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/not_know" />

        <ImageView
            android:id="@+id/k3"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/not_know" />

        <ImageView
            android:id="@+id/k4"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/not_know" />

        <ImageView
            android:id="@+id/k5"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/not_know" />
    </LinearLayout>

    <TextView
        android:id="@+id/thisScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Wynik tego losowania" />

    <TextView
        android:id="@+id/sumScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Wynik gry" />

    <Button
        android:id="@+id/resetScoreBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:backgroundTint="#D2681E"
        android:text="RESETUJ WYNIK" />
</LinearLayout>